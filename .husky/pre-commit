#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo '🏗️👷 Checking your project before committing 👷‍♂️🏗️'
echo 'please be patient, this may take a while...'

echo 'Running Workspace Level prettier format'
# Checking prettier formatting
pnpm format ||
(
  echo '🔨❌ Yoo, you have a problem in your code. Check Prettier 🔨❌
    Run pnpm run format:write, add changes and try commit again.';
  false;
)

echo 'Running Web app Level prettier format'
# Checking prettier formatting
pnpm --filter web format ||
(
  echo '🔨❌ Yoo, you have a problem in your code. Check Prettier 🔨❌
    Run pnpm --filter web format:write, add changes and try commit again.';
  false;
)

echo 'Running Web app Level build format'
# Checking prettier formatting
pnpm --filter web build ||
(
  echo '🔨❌ Yoo, you have a problem in your code. Check Build 🔨❌
    Run pnpm --filter web build, add changes and try commit again.';
  false;
)

echo '🎉 No error found: committing this now.... ✨🚀🏄‍♂️🍻'
